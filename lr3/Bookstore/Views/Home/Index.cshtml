@{
    ViewBag.Title = "Домашняя страница";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div>
        <h3>Магазин книг</h3>
        <table>
            <tr>
                <td><p>Название книги</p></td>
                <td><p>Автор</p></td>
                <td><p>Цена</p></td>
                <td><p>Издательство</p></td>
                <td></td>
            </tr>
            @foreach (var b in ViewBag.Books)
            {
                <tr>
                    <td><p>@b.Name</p></td>
                    <td><p>@b.Author</p></td>
                    <td><p>@b.Price</p></td>
                    <td><p>@b.Publisher</p></td>
                    <td><p><a href="/Home/Buy/@b.Id">Купить</a></p></td>
                </tr>
            }
        </table>
    </div>
    <div class="col-md-4">
        <h3>
            Добавление новой книги.
        </h3>
        @Html.ActionLink("Добавить новую", "AddNew")
    </div>
    <p><a href="/Books/Index">Администраторам</a></p>
</div>